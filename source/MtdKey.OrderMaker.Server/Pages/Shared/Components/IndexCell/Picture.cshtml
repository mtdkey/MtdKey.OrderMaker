@model DocFieldModel

<div class="text-center">
    @if (Model.Value != null)
    {
        var file = (FileModel)Model.Value;
        var base64 = Convert.ToBase64String((byte[])file.Data);
        var imgSrc = String.Format("data:{0};base64,{1}", file.FileType, base64);
        <img src="@imgSrc" style="max-height:48px;" />
    }
    else
    {
        <div class="mtd-index-rows-image"></div>
    }
</div>