@model DocFieldModel
@{
    string value = Model.Value != null ? (string)Model.Value : string.Empty;
    if ((Model.Value == null || (string)Model.Value == string.Empty) && Model.DefaultValue != null && Model.DefaultValue != string.Empty)
        value = Model.DefaultValue;
}

@if (!Model.Options.IsReadOnly())
{
    @await Component.InvokeAsync(typeof(MTDTextField), new MTDTextFieldTags
        {
            Id = Model.Id,
            Name = $"field-{Model.Id}",
            Value = value,
            Label = Model.Name,
            Required = Model.Options.IsRequired(),
            MTDTexFieldView = MTDTextFieldViews.Outlined,
            MaxLength = 150,
            ShowCounter = true
        })
}






